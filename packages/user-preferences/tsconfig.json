{
  "include": ["src/index.ts"],
  "exclude": ["dist/**/*"],
  "compilerOptions": {
    "jsx": "react",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",

    "strict": true,

    "declaration": true,
    "emitDeclarationOnly": true,

    "skipLibCheck": true,

    "outDir": "./dist",
    "rootDir": "./src"
  }
}
